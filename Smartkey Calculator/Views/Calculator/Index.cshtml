@using Smartkey_Calculator.Models
@model KeysModel
@{
    ViewBag.Title = "Oblicz";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-8 form-group">
        <section id="calcForm">
            @using (Html.BeginForm("Index", "Calculator", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h4>Podaj numer seryjny </h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Key, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Key, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Key, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group top-buffer">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Oblicz" class="btn btn-default" />
                    </div>
                </div>
            }
            </section>
        </div>
    </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            @Scripts.Render("~/bundles/ValidZeroInKey")
        }